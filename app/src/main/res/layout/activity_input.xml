<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/offwhite"
    android:layout_height="match_parent"
    tools:context=".activities.input">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:id="@+id/header"
        android:background="@color/youtube_light"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/icon_input_hd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/youtubeinputscreen"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/d_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You-Tube"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downloader"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
        />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the url of You-Tube Video"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/input_title" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/download"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1.8"
                    app:cardElevation="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginVertical="5dp"
                    app:cardBackgroundColor="@color/white">


                    <EditText
                        android:id="@+id/url_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:background="@color/white"
                        android:hint="e.g. https://www.youtube.com"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        android:isScrollContainer="true"
                        android:paddingVertical="10dp"
                        android:textColor="@color/black" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:id="@+id/paste_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="5dp"
                    android:layout_marginRight="5dp"
                    app:cardBackgroundColor="@color/youtube_dark"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="5dp"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/paste"
                        android:layout_gravity="center" />



                </androidx.cardview.widget.CardView>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/download_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    app:cardBackgroundColor="@color/youtube_light"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginHorizontal="100dp"
                    android:focusable="true">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Download"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        style="@style/SpinKitView.Large.FadingCircle"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/facebook_dark" />





</RelativeLayout>